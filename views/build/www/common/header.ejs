<%include banner.ejs%>
<div class="header-bar">
    <div class="header-bar-inner">
                <span class="header-bar-l">
                    <a href="http://<%=host.hr%>/myCompany">企业入口</a>
                </span>
        <ul class="header-bar-r">
            <%if(account&&account.account_name){%>
            <li><a href="/myResume">我的简历</a></li>
            <li><a href="/jobCondition">我的求职</a></li>
            <li>
                <span class="unick"><%=account.account_name%></span>
                <i></i>
                <ul class="header-bar-r-down">
                    <li><a href="/sub/list">我的订阅</a></li>
                    <li><a href="/favorite/list?type=job">我的收藏</a></li>
                    <li><a href="http://<%=host.account%>/setting/base">账号设置</a></li>
                    <li><a href="http://<%=host.hr%>/myCompany">去企业版</a></li>
                    <li><a class="logout">退出</a></li>
                </ul>
            </li>
            <%}else{%>
            <li><a id="login" href="http://<%=host.account%>/login">登录</a></li>
            <li><a id='register' href="http://<%=host.account%>/register">注册</a></li>
            <%}%>
        </ul>
    </div>
</div>
<%if(!account||!account.account_name){%>
<script>
    (function(){
        var url =  encodeURIComponent(location.href);
        document.getElementById('login').setAttribute('href','http://<%=host.account%>/login?forward='+url);
        document.getElementById('register').setAttribute('href','http://<%=host.account%>/register?forward='+url);
    })()
</script>
<%}%>
