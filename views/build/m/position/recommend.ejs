    <%if(ads && ads.length ){%>
    <div class="ad-list swiper-container">
        <div class="swiper-wrapper">
            <%for(var i=0,len=ads.length;i<len;i++){%>
            <div class="swiper-slide">
                <%
                    var ad = JSON.parse(ads[i]);
                    var ad_img = JSON.parse(ad.image).url;
                %>
                <a href="<%=ad.url%>" style="background-image: url('<%=ad_img+'?imageView2/2/w/750'%>')"></a>
            </div>
            <%}%>
        </div>
        <div class="swiper-pagination"></div>
    </div>
    <%}%>
    <div class="nav-list clearfix">
        <a href="/" class="curr">
            <i class="icon icon-job"></i>
            <span>实习</span>
        </a>
        <a href="/campus">
            <i class="icon icon-campus"></i>
            <span>校招</span>
        </a>
        <a href="/activity">
            <i class="icon icon-activity"></i>
            <span>活动</span>
        </a>
        <a href="/nest">
            <i class="icon icon-nest"></i>
            <span>求职头条</span>
        </a>
    </div>
    <div class="content w100">
        <div class="interpolation-list none">
            <a href="/company/detail/2983?forward=<%=encodeOriginalUrl%>" class="block bb w100 link">
                <img src="<%=baseUrl%>/img/interpolation/hjcf.jpg" alt="" class="w100"/>
            </a>
            <a href="/company/detail/110?forward=<%=encodeOriginalUrl%>" class="block bb w100 link ">
                <img src="<%=baseUrl%>/img/interpolation/zl.jpg" alt="" class="w100"/>
            </a>
            <a href="/company/detail/2609?forward=<%=encodeOriginalUrl%>" class="block bb w100 link ">
                <img src="<%=baseUrl%>/img/interpolation/ts.jpg" alt="" class="w100"/>
            </a>
        </div>
        <div class="list w100" id="list"></div>
        <div class='w100 loading tac' id='loading'>
            <img src='<%=baseUrl%>/img/loading.gif' class='loading_icon'>
        </div>
    </div>
</div>
<!--下载App-->
