    <a class="tab iblock fll tac job-tab active" href="javascript:">
        <span class="tab-icon iblock"></span>
        <span>首页</span>
    </a>
    <a class="tab iblock fll search-tab tac" href="/job/search">
        <span class="tab-icon iblock"></span>
        <span>搜索</span>
    </a>
    <a class="tab iblock fll user-tab tac" href="/userCenter">
        <span class="tab-icon iblock"></span>
        <span>我的</span>
    </a>
</div>
