<!doctype html>
<html lang="zh-CN">
<head>
    <%include ../header.ejs%>
    <link rel="stylesheet" href="<%=baseUrl%>/css/page/nest.css"/>
    <style type="text/css">
        html,body{
            background-color: #fff;
        }
    </style>
    <%
    var clientFlag = platform == "client"?1:0;
    if(!clientFlag){%>
    <script src="<%=baseUrl%>/js/lib/IB_require.js" async="true" defer data-main="<%=baseUrl%>/js/page/article/IB_detail.js"></script>
    <%}%>
</head>
<body>
<%include ../bodyHeader.ejs%>
<div class="main w100" style="<%=clientFlag?'padding-top:0':""%>">
    <div class="header w100 tac" style="<%=clientFlag?'display:none':""%>">
        <a href="/nest" class="back left-icon"></a>
        <span>求职头条</span>
        <a href="/" class="home right-icon"></a>
    </div>
    <div class="content w100">
        <%if(article){ %>
        <% var timestamp = +new Date;%>
        <div class="detail">
            <h3><%=article.title%></h3>
            <p class="activity-info"><span><%= new Date(article.create_time).format('yyyy-MM-dd')%></span><span class="sponsor"><%=article.author%></span></p>
            <div class="activity-content">
                <%-article.content%>
            </div>
            <div class="qrcode"><img src="<%=baseUrl%>/img/qrcode-bird.jpg" /></div>
        </div>
        <%}%>
    </div>
</div>
<div class="share-back w100 h100 none" data-cover="<%=article.cover%>" data-title="<%=article.title%>" data-desc="<%=article.summary.substr(0,36)%>"></div>
<%include ../footer.ejs%>
</body>
</html>