<div class="container">
    <div class="center-content">
        <div class="talentPool">
            <!--人才库搜索-->
            <div class="talent-search line-select-wrap">
                <div class="item item-job-type">
                    <ul class="job-class-area clearfix">
                        <li class="title fl">实习分类:</li>
                        <%if(!option.jt){%>
                        <li class="job-type selected fl" data-type="" data-id="" >不限</li>
                        <%}else{%>
                        <li class="job-type fl" data-type="" data-id="" >不限</li>
                        <%}%>
                        <li class="job-class fl" data-class="互联网">互联网</li>
                        <li class="job-class fl" data-class="市场/商务">市场/商务</li>
                        <li class="job-class fl" data-class="通信/电气">通信/电气</li>
                        <li class="job-class fl" data-class="人事/行政">人事/行政</li>
                        <li class="job-class fl" data-class="财经/法律">财经/法律</li>
                        <li class="job-class fl" data-class="媒体/艺术">媒体/艺术</li>
                        <li class="job-class fl" data-class="咨询/教育">咨询/教育</li>
                        <li class="job-class fl" data-class="机械/建筑">机械/建筑</li>
                        <li class="job-class fl" data-class="其他类型">其他类型</li>
                    </ul>
                </div>
                <div class="item item-city">
                    <ul class="active clearfix">
                        <li class="title fl">期望城市:</li>
                        <%if(!option.cid){%>
                        <li class="job-city fl selected" data-c="" data-cid="">不限</li>
                        <%}else{%>
                        <li class="job-city fl" data-c="" data-cid="">不限</li>
                        <%}%>
                        <%for(var i= 0;i<16;++i){%>
                        <%if(option.cid==hotCity[i].city_id){%>
                        <li class="job-city fl selected" data-c="<%=hotCity[i].city_name%>" data-cid="<%=hotCity[i].city_id%>"><%=hotCity[i].city_name%></li>
                        <%}else{%>
                        <li class="job-city fl" data-c="<%=hotCity[i].city_name%>" data-cid="<%=hotCity[i].city_id%>"><%=hotCity[i].city_name%></li>
                        <%}%>
                        <%}%>
                        <li class="btn-more fr">更多<i></i></li>
                    </ul>
                    <div class="more clearfix">
                        <ul class="hot clearfix">
                            <li class="title fl">实习地点:</li>
                            <%if(!option.cid){%>
                            <li class="job-city fl selected" data-c="">不限</li>
                            <%}else{%>
                            <li class="job-city fl" data-c="">不限</li>
                            <%}%>

                            <%for(var i= 0;i<16;++i){%>
                            <%if(option.cid==hotCity[i].city_id){%>
                            <li class="job-city fl selected" data-c="<%=hotCity[i].city_name%>" data-cid="<%=hotCity[i].city_id%>"><%=hotCity[i].city_name%></li>
                            <%}else{%>
                            <li class="job-city fl" data-c="<%=hotCity[i].city_name%>" data-cid="<%=hotCity[i].city_id%>"><%=hotCity[i].city_name%></li>
                            <%}%>
                            <%}%>
                            <li class="btn-more fr">更多<i></i></li>
                        </ul>
                        <ul class="other clearfix">
                            <%for(var i= 16;i<hotCity.length;++i){%>
                            <%if(option.cid==hotCity[i].city_id){%>
                            <li class="job-city fl selected" data-c="<%=hotCity[i].city_name%>" data-cid="<%=hotCity[i].city_id%>"><%=hotCity[i].city_name%></li>
                            <%}else{%>
                            <li class="job-city fl" data-c="<%=hotCity[i].city_name%>" data-cid="<%=hotCity[i].city_id%>"><%=hotCity[i].city_name%></li>
                            <%}%>
                            <%}%>
                        </ul>
                    </div>
                </div>
