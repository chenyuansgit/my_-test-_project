                        <li class="job-salary fl selected" data-s="0">不限</li>
                        <%}else {%>
                        <li class="job-salary fl" data-s="0">不限</li>
                        <%}%>
                        <%if(option.mp == 1){%>
                        <li class="job-salary fl selected" data-s="1">小于50</li>
                        <%}else {%>
                        <li class="job-salary fl" data-s="1">小于50</li>
                        <%}%>
                        <%if(option.mp == 50){%>
                        <li class="job-salary fl selected" data-s="50">50-100</li>
                        <%}else {%>
                        <li class="job-salary fl" data-s="50">50-100</li>
                        <%}%>
                        <%if(option.mp == 100){%>
                        <li class="job-salary fl selected" data-s="100">100-200</li>
                        <%}else {%>
                        <li class="job-salary fl" data-s="100">100-200</li>
                        <%}%>
