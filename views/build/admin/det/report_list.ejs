<!DOCTYPE html>
<html lang="en">
<head>
    <%include ../common/head.ejs%>
</head>
<body>
<%include ../common/header.ejs%>
<div class="main-container" id="main-container">
    <script type="text/javascript">
        try{ace.settings.check('main-container' , 'fixed')}catch(e){}
    </script>
    <div class="main-container-inner">
        <a class="menu-toggler" id="menu-toggler" href="#">
            <span class="menu-text"></span>
        </a>

        <%include ../common/sidebar.ejs%>
        <div class="main-content">
            <div class="page-content">
                <div class="row">
                    <div class="col-xs-12">
                        <!-- PAGE CONTENT BEGINS -->
                        <!--下线-->
                        <div id="modal-success" class="modal">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header blue" data-target="#modal-step-contents">举报成功</div>
                                    <div class="modal-body step-content"><p>是否确定举报成功？</p></div>
                                    <div class="modal-footer wizard-actions">
                                        <button class="btn btn-success btn-sm btn-next button-success" data-dismiss="modal">确定<i class="icon-arrow-right icon-on-right"></i></button>
                                        <button class="btn btn-danger btn-sm pull-left" data-dismiss="modal"><i class="icon-remove"></i>取消</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--上线-->
                        <div id="modal-failed" class="modal">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header blue" data-target="#modal-step-contents">举报失败</div>
                                    <div class="modal-body step-content"><p>是否确定举报失败？</p></div>
                                    <div class="modal-footer wizard-actions">
                                        <button class="btn btn-success btn-sm btn-next button-failed" data-dismiss="modal">确定<i class="icon-arrow-right icon-on-right"></i></button>
                                        <button class="btn btn-danger btn-sm pull-left" data-dismiss="modal"><i class="icon-remove"></i>取消</button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-xs-12">
                                <div class="header smaller lighter blue head-title">包打听举报管理
                                    <!--<p class="search-head">
                                        <input type="text" id="search" placeholder="请输入搜索关键词"/> <a href="" class="btn button-search">搜索</a>
                                    </p>-->
                                </div>
                                <div class="row">
                                    <div class="col-sm-12">
                                        <div class="tabbable">
                                            <ul class="nav nav-tabs" id="myTab">
                                                <li <%if(status == 1 ){%> class="active<%}%>">
                                                    <a href="/det/report/list?status=1&page=1">
                                                        举报列表 <span class="red"><%if(status == 1){%>(<%=(count)%>)<%}%></span>
                                                    </a>
                                                </li>
                                                <li <%if(status == 2){%> class="active<%}%>">
                                                    <a id="tabSuccess" href="/det/report/list?status=2&page=1">
                                                        举报成功 <span class="red"><%if(status == 2){%>(<%=(count)%>)<%}%></span>
                                                    </a>
                                                </li>
                                                <li <%if(status == 3){%> class="active<%}%>">
                                                    <a id="tabFailed" href="/det/report/list?status=3&page=1">
                                                        举报失败 <span class="red"><%if(status == 3){%>(<%=(count)%>)<%}%></span>
                                                    </a>
                                                </li>
                                            </ul>
                                            <div class="tab-content">
                                                <div id="home" class="tab-pane in active">
                                                    <table id="sample-table-home" class="table table-striped table-bordered table-hover">
                                                        <thead>

                                                        <tr>
                                                            <th>ID</th>
                                                            <th>举报标题</th>
                                                            <th>具体描述</th>
                                                            <th>操作</th>
                                                        </tr>
                                                        </thead>
                                                        <%if(det_reports.length>0){%>
                                                        <tbody>
                                                        <%for(var i= 0; i<det_reports.length; i++)
                                                        {%>
                                                        <tr data-id="<%=det_reports[i].id%>">
                                                            <td>
                                                                <p><%=det_reports[i].id%></p>
                                                                <p>举报者ID： <%=det_reports[i].user_id%></p>
                                                                <p>包打听职位ID： <%=det_reports[i].det_id%></p>
                                                            </td>
                                                            <td>
                                                                <p>
                                                                    <%=det_reports[i].title%>
                                                                </p>
                                                            </td>
                                                            <td>
                                                                <p>
                                                                    <%=det_reports[i].desc%>
                                                                </p>
                                                            </td>
                                                            <td class="operation">
                                                                <%if(parseInt(status) == 1){%>
                                                                <p>
                                                                    <a href="#modal-success" data-toggle="modal"><span class="ib-operation">举报成功</span> </a>
                                                                    <a href="#modal-failed" data-toggle="modal"><span class="ib-operation">举报失败</span> </a>
                                                                </p>
                                                                <%}else if(parseInt(status) == 2){%>
                                                                <p>举报成功</p>
                                                                <%}else if(parseInt(status) == 3){%>
                                                                <p>举报失败</p>
                                                                <%}%>
                                                            </td>
                                                        </tr>
                                                        <%}%>
                                                        </tbody>
                                                        <%}else{%>
                                                        <p>该栏目下没有数据！</p>
                                                        <%}%>
                                                    </table>
                                                    <%include ../common/pages.ejs%>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <a href="#" id="btn-scroll-up" class="btn-scroll-up btn btn-sm btn-inverse">
                        <i class="icon-double-angle-up icon-only bigger-110"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<%include ../common/footer.ejs%>
<script src="/public/ace/assets/js/common/fn.js"></script>
<script type="text/javascript">
    window.global = window.global || {};
    global.status = parseInt('<%=status%>');
    global.page = parseInt('<%=page%>');
</script>
<script type="text/javascript">
    var url = location.href;
    var status = global.status;
    var page = global.page;
    //时间戳格式转换
    Date.prototype.format = function(format) {
        var o = {
            "M+": this.getMonth() + 1,
            "d+": this.getDate(),
            "h+": this.getHours(),
            "m+": this.getMinutes(),
            "s+": this.getSeconds(),
            "q+": Math.floor((this.getMonth() + 3) / 3),
            "S": this.getMilliseconds()
        };
        if (/(y+)/.test(format)) {
            format = format.replace(RegExp.$1, (this.getFullYear() + "").substr(4 - RegExp.$1.length));
        }
        for (var k in o) {
            if (new RegExp("(" + k + ")").test(format)) {
                format = format.replace(RegExp.$1, RegExp.$1.length == 1 ? o[k] : ("00" + o[k]).substr(("" + o[k]).length));
            }
        }
        return format;
    };
    //给sidebar加样式
    if(url.indexOf('report')){
        $('#detMenu').addClass('active open');
        $('#detMenu ul li:eq(2)').addClass('active')
    }
    //分页绑定
    fn.pagingBind();

    $('.ib-operation').on('click',function(){
        $('.ib-operation.active').removeClass('active');
        $(this).addClass('active');
    });
    //举报成功
    $('.button-success').click(function(){
        var id = $('.ib-operation.active').closest('tr').attr('data-id');
        url = '/det/report/success/' + id;
        $.ajax({
            type:'POST',
            url:url,
            dataType:'json',
            data:{
            },
            success:function(data){
                if(data.status == '10000'){
                    // alert('POST success');
                    location.reload();
                }
                else{
                    alert('POST error\n' + data.status);
                }

            }
        });
    })
    //举报失败
    $('.button-failed').click(function(){
        var id = $('.ib-operation.active').closest('tr').attr('data-id');
        url = "/det/report/failed/" + id;
        $.ajax({
            type:'POST',
            url:url,
            dataType:'json',
            data:{
            },
            success:function(data){
                if(data.status == '10000'){
                    // alert('POST success');
                    location.reload();
                }
                else{
                    alert('POST error\n' + data.status);
                }

            }
        });
    })
</script>
</body>
</html>