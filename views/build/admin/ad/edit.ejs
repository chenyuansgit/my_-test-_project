<script type="text/javascript">
    window.global = window.global || {};
    global.category_id = '<%=ad.category_id%>';
    global.status = '<%=ad.status%>';
    global.id = '<%=ad.id%>';
    global.img_info = '<%-ad.image||{}%>';
</script>
<script type="text/javascript">
    $(function() {
        //时间戳格式转换
        Date.prototype.format = function(format) {
            var o = {
                "M+": this.getMonth() + 1,
                "d+": this.getDate(),
                "h+": this.getHours(),
                "m+": this.getMinutes(),
                "s+": this.getSeconds(),
                "q+": Math.floor((this.getMonth() + 3) / 3),
                "S": this.getMilliseconds()
            };
            if (/(y+)/.test(format)) {
                format = format.replace(RegExp.$1, (this.getFullYear() + "").substr(4 - RegExp.$1.length));
            }
            for (var k in o) {
                if (new RegExp("(" + k + ")").test(format)) {
                    format = format.replace(RegExp.$1, RegExp.$1.length == 1 ? o[k] : ("00" + o[k]).substr(("" + o[k]).length));
                }
            }
            return format;
        };


        var category_id = global.category_id;
        var status = global.status;
        var id = global.id;

        //给sidebar加样式
        var url = location.href;
        if(url.indexOf('/ad/')){
            $('#adMenu').addClass('active open');
            if(category_id == 1)$('#adMenu ul li:eq(0)').addClass('active');
            else if(category_id == 2)$('#adMenu ul li:eq(1)').addClass('active');
            else if(category_id == 3)$('#adMenu ul li:eq(2)').addClass('active');
            else if(category_id == 4)$('#adMenu ul li:eq(3)').addClass('active');
        }

        //时间插件
        $(".ui_timepicker").datetimepicker({
            //showOn: "button",
            //buttonImage: "./css/images/icon_calendar.gif",
            //buttonImageOnly: true,
            showSecond: true,
            timeFormat: 'hh:mm:ss',
            stepHour: 1,
            stepMinute: 1,
            stepSecond: 1
        })

        //图片上传
        var avatar,imageInfo;
        try{
             imageInfo = JSON.parse(global.img_info);
        }catch(e){}

        var uploader = Qiniu.uploader({
            runtimes: 'html5,flash,html4',    //上传模式,依次退化
            browse_button: 'avatar',       //上传选择的点选按钮，**必需**
            uptoken_url: '/api/upload/upToken?mediaType=image',            //Ajax请求upToken的Url，**强烈建议设置**（服务端提供）
            // downtoken_url: '/downtoken',
            // Ajax请求downToken的Url，私有空间时使用,JS-SDK将向该地址POST文件的key和domain,服务端返回的JSON必须包含`url`字段，`url`值为该文件的下载地址
            // uptoken : '<Your upload token>', //若未指定uptoken_url,则必须指定 uptoken ,uptoken由其他程序生成
            unique_names: false, // 默认 false，key为文件名。若开启该选项，SDK会为每个文件自动生成key（文件名）
            save_key: false,   // 默认 false。若在服务端生成uptoken的上传策略中指定了 `sava_key`，则开启，SDK在前端将不对key进行任何处理
            domain: 'http://qiniu-plupload.qiniudn.com/',   //bucket 域名，下载资源时用到，**必需**
            get_new_uptoken: false,  //设置上传文件的时候是否每次都重新获取新的token
            //  container: 'container',           //上传区域DOM ID，默认是browser_button的父元素，
            max_file_size: '5mb',           //最大文件体积限制
            flash_swf_url: 'js/plupload/Moxie.swf',  //引入flash,相对路径
            max_retries: 3,                   //上传失败最大重试次数
            dragdrop: true,                   //开启可拖曳上传
            drop_element: 'container',        //拖曳上传区域元素的ID，拖曳文件或文件夹后可触发上传
            chunk_size: '5mb',                //分块上传时，每片的体积
            auto_start: true,                 //选择文件后自动上传，若关闭需要自己绑定事件触发上传,
            //x_vars : {
            //    自定义变量，参考http://developer.qiniu.com/docs/v6/api/overview/up/response/vars.html
            //    'time' : function(up,file) {
            //        var time = (new Date()).getTime();
            // do something with 'time'
            //        return time;
            //    },
            //    'size' : function(up,file) {
            //        var size = file.size;
            // do something with 'size'
            //        return size;
            //    }
            //},
            init: {
                'FilesAdded': function(up, files) {
                    plupload.each(files, function(file) {
                        // alert('file is added in the queque');
                        // 文件添加进队列后,处理相关的事情
                    });
                },
                'BeforeUpload': function(up, file) {
                    // alert('before upload');
                    // 每个文件上传前,处理相关的事情
                },
                'UploadProgress': function(up, file) {
                    // alert('uploading');
                    // 每个文件上传时,处理相关的事情
                },
                'FileUploaded': function(up, file, info) {
                    avatar = "http://image.internbird.cn/"+JSON.parse(info).key;
                    $(".company-pic").css({"background-image":"url('"+avatar+"')"});
                    imageInfo = info;
                    // alert('imageUrl=' + avatar);
                    // mr_info.avatar = avatar;
                    // mr_info.uid = uid;
                    // setStorage("mr_info",JSON.stringify(mr_info));
                    // alert('upload success');

                    // 每个文件上传成功后,处理相关的事情
                    // 其中 info 是文件上传成功后，服务端返回的json，形式如
                    // {
                    //    "hash": "Fh8xVqod2MQ1mocfI4S4KpRL6D98",
                    //    "key": "gogopher.jpg"
                    //  }
                    // 参考http://developer.qiniu.com/docs/v6/api/overview/up/response/simple-response.html

                    // var domain = up.getOption('domain');
                    // var res = parseJSON(info);
                    // var sourceLink = domain + res.key; 获取上传成功后的文件的Url
                },
                'Error': function(up, err, errTip) {
                    alert('upload error');
                    //上传出错时,处理相关的事情
                },
                'UploadComplete': function(data) {

                    //队列文件处理完毕后,处理相关的事情
                },
                'Key': function(up, file) {
                    // 若想在前端对每个文件的key进行个性化处理，可以配置该函数
                    // 该配置必须要在 unique_names: false , save_key: false 时才生效

                    var key = md5("admin")+"/"+md5(+new Date)+".png";
                    // do something with key here
                    return key
                }
            }
        });
        //上传广告
        var startTime, endTime, type_id ,adOrder,mainTitle, sideTitle, skipLink, imageUrl, adDesc,addurl,flag=1;
        //Date.parse($("#time-1").val().trim().replace(/-/g,"/"));
        //if(!addImage.length) alert('please input image');
        $('#buttonCancel').click(function(){
            window.history.back();
        })

        //判断输入
        $('.enter-content').blur(function(){
            startTime = parseInt(Date.parse($("input#startTime").val()))/1000;
            endTime = parseInt(Date.parse($("input#endTime").val()))/1000;
            if($(this).hasClass("start-time")) {
                if(!startTime) {
                    $(this).after("<span class='input-tips red'>请输入开始时间</span>");
                    flag = 0;
                }else flag = 1;
            }
            else if($(this).hasClass("end-time")){
                if(!endTime){
                    $(this).after("<span class='input-tips red'>请输入结束时间</span>");
                    flag = 0;
                }else flag =1;
            }
            else if($(this).hasClass("main-title")){
                if($('.main-title').val().length>16 || $('.main-title').val().length<=0){
                    $(this).after("<span class='input-tips red'>请输入主标题，不超过16个字</span>");
                    flag = 0;
                }else flag = 1;
            }
            else if($(this).hasClass("side-title")){
                if($('.side-title').val().length>24 || $('.side-title').val().length<=0){
                    $(this).after("<span class='input-tips red'>不超过24个字</span>");
                    flag = 0;
                }else flag = 1;
            }
            else if($(this).hasClass("order-8")){
                if(parseInt($('.order-8').val())>8 || parseInt($('.order-8').val()) <=0 || $('.order-8').val().length<=0){
                    $(this).after("<span class='input-tips red'>请输入正确的序号</span>");
                    flag = 0;
                }else flag = 1;
            }
            else if($(this).hasClass("order-4")){
                if(parseInt($('.order-4').val())>4 || parseInt($('.order-4').val()) <=0 || $('.order-4').val().length<=0){
                    $(this).after("<span class='input-tips red'>请输入正确的序号</span>");
                    flag = 0;
                }else flag = 1;
            }
            else if($(this).hasClass("skip-link")){
                if($('.skip-link').val().length<=0){
                    $(this).after("<span class='input-tips red'>请输入链接</span>");
                    flag = 0;
                }else flag = 1;
            }
        })
        $(".enter-content").focus(function(){
            $(this).siblings(".input-tips").remove();
        });
        $('#buttonAdd').click(function(){
            startTime = parseInt(Date.parse($("input#startTime").val()));
            endTime = parseInt(Date.parse($("input#endTime").val()));
            type_id = $('#type_id option:selected').val();
            adOrder = $('input#adOrder').val();
            mainTitle= $('input#mainTitle').val();
            sideTitle = $('input#sideTitle').val();
            skipLink= $('input#skipLink').val().trim();
            imageUrl = avatar;
            var img = {};
            //判断图片是否重新上传
            if(avatar != undefined){
                 var obj = $.parseJSON(imageInfo);
                 img.url = imageUrl;
                 img.height = obj.height;
                 img.width = obj.width;

            }else{
                  img = imageInfo || {};
            }
            var image = JSON.stringify(img);
            adDesc= $('input#adDesc').val();
            addurl = '/ad/edit/' + id;
            if( adOrder.length<=0 || mainTitle.length<=0 || !startTime || !endTime|| flag == 0 || type_id ==0)
            {
                alert('请输入正确的内容');
            } else if(!regex.url.test(skipLink)){
                alert('请输入跳转链接(地址前面请加上："http://"或"https://")');
            }else{
                $.ajax({
                    type: 'POST',
                    url: addurl,
                    dataType: 'json',
                    data: {
                        option: {
                            title:mainTitle,
                            sub_title:sideTitle,
                            category_id: category_id,
                            start_time: startTime,
                            end_time: endTime,
                            type_id :type_id,
                            order: parseInt(adOrder),
                            url: skipLink,
                            image: image,
                            desc: adDesc,
                            status: status
                        }
                    },
                   /* if (!option.order || !(option.order < 8 && option.order >= 1) || !option.start_time || !option.end_time || !option.image || !option.url || !option.category_id || option.id) {
                    return res.json(resp_status_builder.build(10002));
                }*/
                    success: function (data) {
                        if (data.status == '10000') {
                            //alert('POST success');
                            window.location.href = '/ad/list?status=1&page=1&category_id=' + category_id;
                        }
                        else {
                            alert('POST error\n' + data.status + ':' + data.desc);
                        }
                    }
                })
            }
            return false;
        })

    })
</script>

