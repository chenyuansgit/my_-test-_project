                        <div id="modal-online" class="modal">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header blue" data-target="#modal-step-contents">
                                        上线广告
                                    </div>
                                    <div class="modal-body step-content">
                                        <p>你确定要重现上线广告？</p>
                                    </div>
                                    <div class="modal-footer wizard-actions">
                                        <button class="btn btn-success btn-sm btn-next button-online" data-dismiss="modal">
                                            确定
                                            <i class="icon-arrow-right icon-on-right"></i>
                                        </button>

                                        <button class="btn btn-danger btn-sm pull-left" data-dismiss="modal">
                                            <i class="icon-remove"></i>
                                            取消
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div id="modal-recover" class="modal">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header blue" data-target="#modal-step-contents">
                                        恢复广告
                                    </div>
                                    <div class="modal-body step-content">
                                        <p>你确定要恢复广告</p>
                                    </div>
                                    <div class="modal-footer wizard-actions">
                                        <button class="btn btn-success btn-sm btn-next button-recover" data-dismiss="modal">
                                            确定
                                            <i class="icon-arrow-right icon-on-right"></i>
                                        </button>

                                        <button class="btn btn-danger btn-sm pull-left" data-dismiss="modal">
                                            <i class="icon-remove"></i>
                                            取消
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12">
                                <div class="header smaller lighter blue head-title">
                                    <%if(category_id == 1){%>pc首页大图广告<%}else if(category_id == 2){%>pc首页小图广告<%}else if(category_id == 3){%>px搜索页小图广告<%}else if(category_id == 4){%>客户端首页广告<%}%>
                                    <%if(category_id == '1'){%>
                                    <a href="/ad/add?category_id=1" class="btn">添加</a>
                                    <%}else if(category_id == '2'){%>
                                    <a href="/ad/add?category_id=2" class="btn">添加</a>
                                    <%}else if(category_id == '3'){%>
                                    <a href="/ad/add?category_id=3" class="btn">添加</a>
                                    <%}else if(category_id == '4'){%>
                                    <a href="/ad/add?category_id=4" class="btn">添加</a>
                                    <%}else if(category_id == '6'){%>
                                    <a href="/ad/add?category_id=6" class="btn">添加</a>
                                    <%}%>
                                </div>
                                <div class="row">
                                    <div class="col-sm-12">
                                        <div class="tabbable">
                                            <ul class="nav nav-tabs" id="myTab">
                                                <li id="adList" <%if(status == 1){%> class="active<%}%>">
                                                    <a href="/ad/list?status=1&page=1&category_id=<%=category_id%>">
                                                        已上线
                                                    </a>
                                                </li>
                                                <li id="offlineList" <%if(status == 2){%> class="active<%}%>">
                                                    <a href="/ad/list?status=2&page=1&category_id=<%=category_id%>">
                                                        已下线
                                                    </a>
                                                </li>
                                                <li id="deleteList" <%if(status == 9){%> class="active<%}%>">
                                                    <a href="/ad/list?status=9&page=1&category_id=<%=category_id%>">
                                                        已删除
                                                    </a>
                                                </li>
                                            </ul>
                                            <div class="tab-content">
                                                <div id="home" class="tab-pane in active">
                                                    <div class="table-responsive">
                                                        <table id="sample-table-1" class="table table-striped table-bordered table-hover">
                                                            <thead>
                                                            <%if(ads.length>0){%>
                                                            <tr>
                                                                <th>ID</th>
                                                                <th>投放</th>
                                                                <th >状态</th>
                                                              <!--  <th>统计</th>-->
                                                                <th>操作</th>
                                                            </tr>
                                                            </thead>
                                                            <tbody>
                                                            <%
                                                            for(var i=0; i<ads.length; i++){%>
                                                            <tr data-aid="<%=ads[i].id%>">
                                                                <td><%=ads[i].id%></td>
                                                                <td>
                                                                    <%
                                                                        var img = '';
                                                                        try{
