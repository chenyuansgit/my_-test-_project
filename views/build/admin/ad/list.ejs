                                                                    <p>投放序号：<span class="ib-hot"><%=ads[i].order%></span></p>
                                                                    <%if(parseInt(status) == 1 ){%>
                                                                         <%if(ads[i].end_time <= +new Date){%>
                                                                           <p>投放状态：<span class="ib-hot" style="color:#f00;">待下线</span></p>
                                                                        <%}else if(ads[i].start_time<+new Date){%>
                                                                           <p>投放状态：<span class="ib-hot" style="color:#f00;">在投放</span></p>
                                                                        <%}else{%>
                                                                            <p>投放状态：<span class="ib-hot"  style="color:#f00;">待投放</span></p>
                                                                        <%}%>
                                                                    <%}%>
                                                                </td>
                                                               <!-- <td>
                                                                    <p>展示：<span class="ib-show">111</span></p>
                                                                    <p>点击：<span class="ib-click">111</span></p>
                                                                </td>-->

                                                                <td class="operation">
                                                                    <%if(parseInt(status) == 1){%>
                                                                    <p>
                                                                        <a href="/ad/edit/<%=ads[i].id%>"><span class="ib-operation">编辑</span> </a>
                                                                        <a href="#modal-offline" data-toggle="modal"><span class="ib-operation">下线</span> </a>
                                                                    </p>
                                                                    <%}else if(parseInt(status) == 2){%>
                                                                    <p>
                                                                        <a href="/ad/edit/<%=ads[i].id%>"><span class="ib-operation">编辑</span> </a>
                                                                        <a href="#modal-online" data-toggle="modal"><span class="ib-operation" data-category-id = "<%=ads[i].category_id%>" data-starttime="<%=ads[i].start_time%>" data-endtime="<%=ads[i].end_time%>">上线</span> </a>
                                                                        <a href="#modal-delete" data-toggle="modal"><span class="ib-operation">删除</span> </a>
                                                                    </p>
                                                                    <%}else if(parseInt(status) == 9){%>
                                                                    <p>
                                                                        <a href="#modal-recover" data-toggle="modal"><span class="ib-operation" data-starttime="<%=ads[i].start_time%>" data-endtime="<%=ads[i].end_time%>">恢复</span> </a>

                                                                    </p>
                                                                    <%}%>
                                                                </td>
                                                            </tr>
                                                            <%}}else{%>
                                                            <p>该栏目下没有数据！</p>
                                                            <%}%>
                                                            </tbody>
                                                    </table>
                                                    <%include ../common/pages.ejs%>
                                                </div>

                                            </div>
                                        </div>
                                    </div><!-- /span -->
                                </div>
                            </div>
                        </div>

                    </div><!-- PAGE CONTENT ENDS -->
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.page-content -->
    </div><!-- /.main-content -->
    <a href="#" id="btn-scroll-up" class="btn-scroll-up btn btn-sm btn-inverse">
        <i class="icon-double-angle-up icon-only bigger-110"></i>
    </a>
</div><!-- /.main-container -->
</div>
<%include ../common/footer.ejs%>
<script type="text/javascript" src="/public/ace/assets/js/common/fn.js"></script>
<script>
    window.global = window.global || {};
    global.category_id = parseInt('<%=category_id%>');
</script>
<script type="text/javascript">
    $(function () {
        //时间戳格式转换
        Date.prototype.format = function(format) {
            var o = {
                "M+": this.getMonth() + 1,
                "d+": this.getDate(),
                "h+": this.getHours(),
                "m+": this.getMinutes(),
                "s+": this.getSeconds(),
                "q+": Math.floor((this.getMonth() + 3) / 3),
                "S": this.getMilliseconds()
            };
            if (/(y+)/.test(format)) {
                format = format.replace(RegExp.$1, (this.getFullYear() + "").substr(4 - RegExp.$1.length));
            }
            for (var k in o) {
                if (new RegExp("(" + k + ")").test(format)) {
                    format = format.replace(RegExp.$1, RegExp.$1.length == 1 ? o[k] : ("00" + o[k]).substr(("" + o[k]).length));
                }
            }
            return format;
        };
        //给sidebar加样式
        var url = location.href;
        if(url.indexOf('/ad/')>-1){
            var category_id = global.category_id;
            $('#adMenu').addClass('active open');
            if(category_id == 1)$('#adMenu ul li:eq(0)').addClass('active');
            else if(category_id == 2)$('#adMenu ul li:eq(1)').addClass('active');
            else if(category_id == 3)$('#adMenu ul li:eq(2)').addClass('active');
            else if(category_id == 4)$('#adMenu ul li:eq(3)').addClass('active');
            else if(category_id == 6)$('#adMenu ul li:eq(4)').addClass('active');
        }
        //分页绑定
        fn.pagingBind();
        var startTime;
        var endTime;
        //POST
        $('.ib-operation').on('click', function () {
            var id = $(this).closest('tr').attr('data-aid');
            startTime = $(this).attr('data-starttime');
            endTime = $(this).attr('data-endtime');
            category_id = $(this).attr('data-category-id');
           // alert('startTime=' + startTime + ',endTime=' + endTime);
            $('.button-delete').click(function () {
                url = '/ad/del/' + id;
                $.ajax({
                    type: 'POST',
                    url: url,
                    dataType: 'json',
                    data: {
                        option: {

                        }
                    },
                    success: function (data) {
                        if (data.status == '10000') {
                            //alert('POST success');
                            location.reload();
                        }
                        else {
                            alert('POST error\n' + data.status);
                        }

                    }
                });
            })
            $('.button-online').click(function () {
                url = '/ad/online/' + id;
                $.ajax({
                    type: 'POST',
                    url: url,
                    dataType: 'json',
                    data: {
                        option:{
                            start_time:startTime,
                            end_time:endTime,
                            category_id :category_id
                        }
                    },
                    success: function (data) {
                        if (data.status == '10000') {
                            //alert('POST success');
                            location.reload();
                        }
                        else {
                            alert('POST error\n' + data.status);
                        }

                    }
                });
            })

            //下线与恢复接口,恢复操作调用的是下线接口
            $('.button-offline,.button-recover').click(function () {
                url = '/ad/offline/' + id;
                $.ajax({
                    type: 'POST',
                    url: url,
                    dataType: 'json',
                    data: {
                        id:id
                    },
                    success: function(data) {
                        if (data.status == '10000') {
                            //alert('POST success');
                            location.reload();
                        }
                        else {
                            alert('POST error\n' + data.status);
                        }

                    }
                });
            })

        });
    })
</script>
</body>
</html>