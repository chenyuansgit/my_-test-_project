<script type="text/javascript">
    $(function () {
        //时间戳格式转换
        Date.prototype.format = function(format) {
            var o = {
                "M+": this.getMonth() + 1,
                "d+": this.getDate(),
                "h+": this.getHours(),
                "m+": this.getMinutes(),
                "s+": this.getSeconds(),
                "q+": Math.floor((this.getMonth() + 3) / 3),
                "S": this.getMilliseconds()
            };
            if (/(y+)/.test(format)) {
                format = format.replace(RegExp.$1, (this.getFullYear() + "").substr(4 - RegExp.$1.length));
            }
            for (var k in o) {
                if (new RegExp("(" + k + ")").test(format)) {
                    format = format.replace(RegExp.$1, RegExp.$1.length == 1 ? o[k] : ("00" + o[k]).substr(("" + o[k]).length));
                }
            }
            return format;
        };
        //给sidebar加样式
        var url = location.href;
        //给sidebar加样式
        if (url.indexOf('open_screen')) {
            $('#adMenu').addClass('active open');
            $('#adMenu ul li:eq(4)').addClass('active')
        }
        //分页绑定
        fn.pagingBind();
        var startTime;
        var endTime;

        $('.ib-operation').on('click', function () {
            var id = $(this).closest('tr').attr('data-aid');
            startTime = $(this).attr('data-starttime');
            endTime = $(this).attr('data-endtime');
            category_id = $(this).attr('data-category-id');
            $('.button-delete').click(function () {
                url = '/ad/del/' + id;
                $.ajax({
                    type: 'POST',
                    url: url,
                    dataType: 'json',
                    data: {
                        option: {

                        }
                    },
                    success: function (data) {
                        if (data.status == '10000') {
                            location.reload();
                        }
                        else {
                            alert('POST error\n' + data.status);
                        }

                    }
                });
            })
        });
        $(".btn-offline").click(function(){
            $("#modal-offline").show();
        });
        $(".btn-online").click(function(){
            $("#modal-online").show();
        });
        var os_id = $(".os_state").attr("data-osid");
        $(".button-offline").click(function(){
            if(os_id){
                $.ajax({
                    type: 'POST',
                    url: '/open_screen/offline',
                    dataType: 'json',
                    data: {
                        option: {

                        }
                    },
                    success: function (data) {
                        if (data.status == '10000') {
                            $("#modal-offline").hide();
                            $(".os_state").replaceWith("<span data-osid='"+os_id+"'  class='os_state' style='color:red;'>已下线</span>")
                            alert("开屏广告下线成功");
                        }
                        else {
                            alert('POST error\n' + data.status);
                        }

                    }
                });
            }else{
                alert("请添加有效的开屏广告进行下线操作");
            }

        })
        $(".button-online").click(function(){
            if(os_id){
                $.ajax({
                    type: 'POST',
                    url: '/open_screen/online',
                    dataType: 'json',
                    data: {
                        option: {

                        }
                    },
                    success: function (data) {
                        if (data.status == '10000') {
                            $("#modal-online").hide();
                            $(".os_state").replaceWith("<span data-osid='"+os_id+"' class='os_state' style='color:green;'>在线</span>");
                            alert("开屏广告上线成功");
                        }
                        else {
                            alert('POST error\n' + data.status);
                        }

                    }
                });
            }else{
                alert("请添加有效的开屏广告进行上线操作");
            }
        })
        $(".btn-danger").click(function(){
            $(this).closest(".modal").hide();
        });


    })
</script>
