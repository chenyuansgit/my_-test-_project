<%include bannerHr.ejs%>
<div class="header-bar">
     <div class="header-bar-inner">
                <span class="header-bar-l">
                    <a href="http://<%=host.www%>/">实习鸟首页</a>
                </span>
            <ul class="header-bar-r">
                <%if(account&&account.account_name){%>
                <li><a href='http://<%=host.hr%>/job/add'>发布新职位</a></li>
                <li><a href='http://<%=host.hr%>/company'>公司主页</a></li>
                <li>
                    <span class="unick"><%=account.account_name%></span>
                    <i></i>
                    <ul class="header-bar-r-down">
                        <li><a href="http://<%=host.hr%>/employer/setting">招聘设置</a></li>
                        <li><a href="http://<%=host.hr%>/setting/base">账号设置</a></li>
                        <li><a href="http://<%=host.www%>/">去个人版</a></li>
                        <li><a class="logout">退出</a></li>
                    </ul>
                </li>
                <%}else{%>
               <!-- <li><a href="javascript:;">登录</a></li>
                <li><a href="javascript:;">注册</a></li>-->
                <li><a id="login" href="http://<%=host.account%>/login">登录</a></li>
                <li><a id='register' href="http://<%=host.account%>/register">注册</a></li>
                <%}%>
            </ul>
        </div>
 </div>
 <%if(!account||!account.account_name){%>
 <script>
     (function(){
         var url =  encodeURIComponent(location.href);
         document.getElementById('login').setAttribute('href','/login?forward='+url);
         document.getElementById('register').setAttribute('href','/register?forward='+url);
     })()
 </script>
 <%}%>

