</head>
<body>
<!--页面头部-->
<div class="header">
    <%include ../common/header.ejs%>
    <!--首页导航-->
    <div class="header-nav">
        <div class="header-nav-wrap">
        <a class="logo" href="http://<%=host.www%>"></a>
        <ul class="header-link clearfix">
            <li><a class="header-link-item" href="http://<%=host.www%>/">首页</a></li>
            <li><a class="header-link-item" href="http://<%=host.www%>/j/search">实习招聘</a></li>
            <li><a class="header-link-item" href="http://<%=host.www%>/j/search?type=campus">校园招聘</a></li>
            <li>
                <a class="header-link-item" href="http://<%=host.www%>/quickRecruit">快招</a><i class="icon-test"></i>
                <ul class="sub-nav sub-nav-quickRecruit">
                    <li><a href="http://<%=host.www%>/quickRecruit/qrManage">我的快招</a></li>
                </ul>
            </li>
            <li><a class="header-link-item" href="http://<%=host.www%>/activity">活动</a></li>
            <li><a class="header-link-item" href="http://<%=host.www%>/nest">求职头条</a></li>
        </ul>
    </div>
    </div>
</div>
<!--页面主体-->
<div class="container clearfix mb20">
    <div class="w310 fl">
        <div class="setting-nav sideBox">
            <h4>账号设置</h4>
            <ul>
                <li><a href="http://<%=host.www%>/userCenter">个人信息</a></li>
                <li><a href="http://<%=host.account%>/setting/user">密码修改</a></li>
                <li class="curr"><a href="http://<%=host.account%>/setting/base">账号关联</a><span class="icon-sign"></span></li>
            </ul>
        </div>
    </div>
    <div class="wl840 fr">
        <div class="setting-main inwrapBox">
           <!-- <h3>修改个人信息</h3>
            <div class="setting-edit-avatar mb20 clearfix">
                <span class="t fl">头像：</span>
                <div class="avatar fl" data-avatar=""  style="background-image:url('?imageView2/2/w/240/h/240')">
                    <input type="file" id="avatar-file" name="file" class="avatar-file" title="支持jpg、jpeg、gif、png格式，文件小于5M"/>
                    <div class="avatar-text">上传新的图像</div>
                </div>
            </div>
            <div class="setting-edit-mail mb20">
                <span class="t">昵称：</span>
                <input class="new-nickname setting-input" value="" type="text" />
            </div>
            <input type="button" class="btn btn-outline btn-blue btn-edit" value="修改"/>-->
            <h3>账号绑定</h3>
            <div class="account-info">
            <p>绑定后，你可以同时使用以下方式登录实习鸟</p>
            </div>
            <div class="bind-mail">
                <span class="icon-email"></span>
                <%if(accounts&&accounts.email){%>
                <span class="already-bind"><span class="bind-tips">已绑定邮箱</span><%=accounts.email.value%></span>
                <span class="replace-email">更换邮箱号码</span>
                <%}else{%>
                <span class="bind-account" data-type="email">还没有绑定邮箱</span>
                <span class="replace-email">验证邮箱</span>
                <%}%>
            </div>

            <div class="mail-box">
           <!-- <h4>请验证邮箱号码以便您找回密码</h4>-->
            <!--验证邮箱号码-->
            <div class="setting-input-area clearfix">
                <!--输入框-->
                <div class="setting-input-text fl">
                    <input class="setting-email" placeholder="请输入要绑定的邮箱号码" type="text"/>
                    <span class="remind-succ remind-succ-email remind">
                        <span class="icon-speed"></span>已验证
                    </span>
                    <span class="remind-err remind-err-email remind">
                         <span class="icon-prompt"></span>未验证
                    </span>
                </div>
                <!--按钮-->
                <div class="setting-input-btn fr">
                    <input class="btn-info-change btn-change-email btn" type="button" value="验证邮箱号码"/>
                    <input class="btn-info-change remind-resend-email remind-resend" type="button" value="60秒后可重新发送"/>
                </div>
            </div>
            <!--提示信息-->
            <div class="remind-err remind-err-email-2 remind">
                <span class="icon-prompt"></span>请输入正确有效的邮箱号码
            </div>
            <div class="remind-err remind-err-email-3 remind">
                <span class="icon-prompt"></span>如需更改，请输入新的邮箱号码
            </div>
            <div class="remind-succ remind-succ-email-2 remind">
                <span class="icon-speed"></span>验证邮件发送成功，请注意查收
            </div>
            </div>

            <div class="bind-phone">
                <span class="icon-phone"></span>
                <%if(accounts&&accounts.phone){%>
                <span class="already-bind"><span class="bind-tips">已绑定手机号码</span><%=accounts.phone.value%></span>
                <span class="replace-phone">更换手机号码</span>
                <%}else{%>
                <span class="bind-account" data-type="phone">还没有绑定手机号码</span>
                <span class="replace-phone">验证手机号码</span>
                <%}%>
            </div>
            <div class="phone-box">
           <!-- <h4>请验证手机号码以便您找回密码和接收信息</h4>-->
            <!--验证邮箱号码-->
            <div class="setting-input-area clearfix">
                <!--输入框-->
                <div class="setting-input-text fl">
                    <input class="setting-phone" data-type="int" placeholder="请输入要绑定的手机号码" type="text"/>
                    <span class="remind-succ remind-succ-phone remind">
                        <span class="icon-speed"></span>已验证
                    </span>
                    <span class="remind-err remind-err-phone remind">
                         <span class="icon-prompt"></span>未验证
                    </span>
                </div>
                <!--按钮-->
                <div class="setting-input-btn fr">
                    <input class="btn-info-change btn-change-phone btn" type="button" value="验证手机号码"/>
                    <input class="btn-info-change remind-resend-code remind-resend" type="button" value="60秒后可重新发送"/>
                </div>
            </div>
            <!--提示信息-->
            <div class="remind-err remind-err-phone-2 remind">
                <span class="icon-prompt"></span>请输入有效的11位手机号码
            </div>
            <div class="remind-err remind-err-phone-3 remind">
                <span class="icon-prompt"></span>如需更改，请输入新的手机号码
            </div>
            <div class="remind-err remind-err-phone-4 remind">
                <span class="icon-speed"></span>该手机号码已经被绑定,请输入其它手机号码
            </div>
            <!--图形验证码-->
            <div class="verifyCode-area">
                <input type="text" class="reg-code-machine enter-input" placeholder="请输入图形验证码"/>
                <img src="/vcode/create?time=<%=(+new Date)%>" alt="" class="machine-code">
                <span class="btn-refresh"></span>
            </div>
            <!--验证码-->
            <div class="clearfix code-area">
                <input type="text" class="phone-code code fl" placeholder="请输入验证码" />
                <input type="button" class="send-code btn fl" value="验证"/>
            </div>
            </div>

            <%if(accounts&&accounts.wechat){%>
            <div class="bind-wechat">
                <span class="icon-weixin"></span><span class="bind-account" data-type="wechat" style="display: none;">关联微信账号</span>
                <span class="already-bind"><span class="bind-tips">已绑定微信账号</span></span>
                <!--<span class="bind-name">账号ID:???</span></span>-->
            </div>
            <%}%>

            <%if(accounts&&accounts.weibo){%>
            <div class="bind-weibo">
                <span class="icon-weibo"></span><span class="bind-account" data-type="weibo" style="display: none;">关联微博账号</span>
                <span class="already-bind"><span class="bind-tips">已绑定微博账号</span></span>
            </div>
            <%}%>

            <%if(accounts&&accounts.qq){%>
            <div class="bind-qq">
                <span class="icon-black-qq"></span><span class="bind-account" data-type="qq" style="display: none;">关联QQ账号</span>
                <span class="already-bind"><span class="bind-tips">已绑定QQ账号</span></span>
            </div>
            <%}%>

        </div>

    </div>
</div>
<%include ../common/footer.ejs%>
<script type="text/javascript">
    window.global = window.global?window.global:{};
    global.type = 1;
    global.phone = "<%=accounts.phone ? accounts.phone.value : ""%>";
    global.email = "<%=accounts.email ? accounts.email.value : ''%>";
    global.email_validated = "<%=accounts.email ? accounts.email.validated:""%>";
</script>
<%include ../common/statistics.ejs%>
</body>
</html>