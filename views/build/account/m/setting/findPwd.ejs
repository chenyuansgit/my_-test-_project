<!doctype html>
<html lang="zh-CN">
<head>
    <%include ../common/header.ejs%>
    <link rel="stylesheet" href="<%=baseUrl%>/css/page/m/findPwd.css"/>
    <script type="text/javascript">
        window.global = window.global || {};
        global.host = {
            m: "http://<%=host.m%>"
        };
    </script>
    <script src="<%=baseUrl%>/js/m/lib/IB_require.js" async="true" defer data-main="<%=baseUrl%>/js/m/page/setting/IB_findPwd.js"></script>
</head>
<body>
<%include ../common/bodyHeader.ejs%>
<div class="main">
    <div class="top">
        <a href="/login" class="icon-back"></a>
    </div>
    <div class="logo"></div>
    <div class="step-area">
        <div class="step step-1">
            <div class="line">
                <input type="text" class="account" placeholder="请输入已注册的手机或邮箱号码">
            </div>
            <div class="line">
                <input type="text" class="vcode" placeholder="请输入图片验证码">
                <img src="/vcode/create?time=<%=(+new Date)%>" alt="图片验证码" class="machine-code">
                <span class="btn-refresh"></span>
            </div>
            <div class="line">
                <input type="text" class="code" placeholder="请输入验证码">
                <span class="btn-sendCode">获取验证码</span>
                <button class="btn-resendCode">60秒后重试</button>
            </div>
            <div class="btn btn-checkCode">下一步</div>
        </div>
        <div class="step step-2 none">
            <div class="line">
                <input type="password" class="pwd" placeholder="设置密码">
            </div>
            <div class="line">
                <input type="password" class="pwd-confirm" placeholder="确认密码">
            </div>
            <div class="btn btn-reset">完成</div>
        </div>
    </div>
</div>
<div class="popTips animation"></div>
<%include ../common/footer.ejs%>
</body>
</html>